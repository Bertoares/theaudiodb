<div class="ccc">
    
    <div class="bbb">
        <button class="button-all"><%= link_to "Volver a lista de artistas", artists_path %></button>
    </div>

    <div class="aaa"> 

            <div id= "button-favoritable-<%= @artist.id.to_s %>">
                <%= render "favorites/buttons_favorite", object: @artist, user: current_user %>
            </div>
                
    </div>

</div>


<h3> <%= @artist.name %> </h3>
<p> <%= @artist.year %> </p>
<p> <%= @artist.style %> </p>

<% if @artist.website? %>
    <% url = "https://" + @artist.website %>
    <p> <a href= <%= url %> target="_blank"> Website </a> </p>
<% else %>
    <p> No tiene Website asociada. </p>  
<% end %>

<% if @artist.facebook? %>
    <% url = "https://" + @artist.facebook %>
    <p> <a href= <%= url %> target="_blank"> Facebook </a> </p>
<% else %>
    <p> No tiene Facebook asociado. </p>  
<% end %>


<% if @artist.twitter? %>
    <% url = "https://" + @artist.twitter %>
    <p> <a href= <%= url %> target="_blank"> Twitter </a> </p>
<% else %>
    <p> No tiene Twitter asociado. </p>  
<% end %>

<p> <%= @artist.country %> </p>
<p> <%= @artist.bio_en %> </p>
<p> <%= @artist.bio_esp %> </p>

<% if @artist.thumb? %>
    <%= image_tag(@artist.thumb, :alt => @artist.name + " picture") %>
<% end %>

<% if @searched_albums.any? %>

    <% @searched_albums.each do |album|%>

        <p><%= link_to album.name, artist_album_path(album, artist_id: @artist.id)  %></p>
        <p><%= '**************************************' %></p>

    <% end %>

<% else %>

    <p> La b√∫squeda no tuvo suerte. </p>
    <p><%= link_to "Volver a" + @artist.name, artist_path(@artist.id) %></p>
    
<% end %>