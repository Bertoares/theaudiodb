<button><%= link_to "Volver a lista de artistas", artists_path %></button>
<%= link_to 'Buscar albums de ' + @artist.name, artist_albums_path(artist_id: @artist.id), class: "" %>

<button><%= link_to "Favorite", user_favorites_path(user_id: current_user, object_id: @artist.id, object_class: @artist.class), method: :post %></button>
<button><%= link_to "DesFavorite", user_favorite_path(user_id: current_user, object_id: @artist.id, object_class: @artist.class), method: "DELETE" %></button>

<h3> <%= @artist.name %> </h3>
<p> <%= @artist.year %> </p>
<p> <%= @artist.style %> </p>

<% if @artist.website? %>
    <% url = "https://" + @artist.website %>
    <p> <a href= <%= url %> target="_blank"> Website </a> </p>
<% else %>
    <p> No tiene Website asociada. </p>  
<% end %>

<% if @artist.facebook? %>
    <% url = "https://" + @artist.facebook %>
    <p> <a href= <%= url %> target="_blank"> Facebook </a> </p>
<% else %>
    <p> No tiene Facebook asociado. </p>  
<% end %>


<% if @artist.twitter? %>
    <% url = "https://" + @artist.twitter %>
    <p> <a href= <%= url %> target="_blank"> Twitter </a> </p>
<% else %>
    <p> No tiene Twitter asociado. </p>  
<% end %>

<p> <%= @artist.country %> </p>
<p> <%= @artist.bio_en %> </p>
<p> <%= @artist.bio_esp %> </p>

<% if @artist.thumb? %>
    <%= image_tag(@artist.thumb, :alt => @artist.name + " picture") %>
<% end %>
