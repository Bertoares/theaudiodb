<button><%= link_to "Volver a lista de albumes", artist_albums_path %></button>
<%= link_to 'Canciones que pernecen a "' + @album.name + '"', artist_album_tracks_path(album_id: @album.id), class: "" %>

<button><%= link_to "Favorite", user_favorites_path(user_id: current_user, object_id: @album.id, object_class: @album.class), method: :post %></button>
<button><%= link_to "DesFavorite", user_favorite_path(user_id: current_user, object_id: @album.id, object_class: @album.class), method: "DELETE" %></button>

<h3> <%= @album.name %> </h3>
<p> <%= @album.year %> </p>
<p> <%= @album.genre %> </p>
<p> <%= @album.des_en %> </p>


<% if @album.thumb? %>
    <%= image_tag(@album.thumb, :alt => @album.name + " picture") %>
<% end %>
