
    <!-- Formulario dentro del usuario ???????? -->
<div class="formulario-user">

    <div class="search-artist">
        <%= form_with url: artists_path, method: :get do |f| %>

            <div class="padrealigncenter">
                <div><%= label_tag "Nombre completo del artista:" %></div>
                <div><%= text_field_tag 'search', nil, placeholder: 'Buscar un artista...', class: "text-field-all" %></div>
            </div>

        <!-- Aqui sirve para llevarme un dato, sin que el usuario lo sepa o lo indique -->
            <%= f.hidden_field :id %>

            <p class="btn-search-artist" > <%= f.submit "Buscar artista", class: "button-all" %> </p>

        <% end %>
    </div>

    <div class="table-fav-user">
        <%= render "favorites_of_user", favorites: @favorite_artists, title: 'ARTISTS' %>
        <br><br>
        <%= render "favorites_of_user", favorites: @favorite_albums, title: 'ALBUMS' %>
        <br><br>
        <%= render "favorites_of_user", favorites: @favorite_tracks, title: 'TRACKS' %>
    </div>

</div>
